<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Pytocs.Gui"
        Width="800" Height="600"
        Title="Pytocs GUI"
        x:Class="Pytocs.Gui.MainWindow">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Exit" Click="Exit_Click" />
            </MenuItem>
        </Menu>
        <TabControl>
            <TabItem Header="Folder Converter">
                <local:FolderConverterTab />
            </TabItem>
            <TabItem Header="File &amp; Snippet Converter">
                <local:SnippetConverterTab />
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>